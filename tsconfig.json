{
	"compilerOptions": {
		"target": "es2022",
		"module": "ES2022",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "build",
		"declaration": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx"
	},
	"include": ["src"],
	"exclude": [
		"src/**/*.spec.tsx",
		"src/setupTests.tsx",
		"src/stories",
		"src/*.ts"
	]
}
